{
  "name": "bqls-vscode",
  "description": "bqls vscode extension",
  "author": "yokomotod",
  "license": "MIT",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/yokomotod/bqls-vscode"
  },
  "publisher": "yokomotod",
  "categories": [],
  "keywords": [],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:sql"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "bqls",
      "properties": {
        "bqls.projects": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["bigquery-public-data"],
          "description": "List of BigQuery projects to display in the explorer."
        }
      }
    },
    "commands": [
      {
        "command": "bqls.executeQuery",
        "title": "Execute Query"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bqls-vscode",
          "title": "bqls-vscode",
          "icon": "resources/bigquery.svg"
        }
      ]
    },
    "views": {
      "bqls-vscode": [
        {
          "id": "bigQueryExplorer",
          "name": "BigQuery Explorer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint",
    "postinstall": "cd client && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20",
    "eslint": "^9.13.0",
    "mocha": "^10.3.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  }
}
